set recolor
set recolor-keephue
set recolor-lightcolor \#4C566A
set recolor-darkcolor \#ECEFF4
set statusbar-bg \#4C566A
set statusbar-fg \#ECEFF4
set highlight-color \#5E81AC
set highlight-active-color \#88C0D0

set selection-clipboard clipboard

# https://sspai.com/post/64080
set synctex true
set synctex-editor-command "nvr --remote-silent %f -c %l"

# https://gist.github.com/michaelmrose/9595075b43f24aa903fa
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
